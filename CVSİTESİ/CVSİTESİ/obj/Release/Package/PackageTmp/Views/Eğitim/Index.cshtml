@using CVSİTESİ.Models.Entity
@model List<TblEğitimlerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<h2>Eğitim Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Alt Başlık 2</th>
        <th>GNO</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>


    </tr>
    @foreach (var item in Model)
    {
<tr>
    <td>@item.ID</td>
    <td>@item.Başlık</td>
    <td>@item.AltBaşlık1</td>
    <td>@item.AltBaşlık2</td>
    <td>@item.Tarih</td>
    <td>@item.GNO</td>
    <td>
        <a class="btn btn-info btn-sm" href="/Eğitim/EğitimSil/@item.ID">
            <i class="fas fa-pencil-alt">
                Sil
            </i>
        </a>
    <td>
        <a class="btn btn-danger btn-sm" href="/Eğitim/EğitimDüzenle/@item.ID">
            <i class="fas fa-trash">
                Düzenle
            </i>
        </a>

    </td>

</tr>
    }
</table>

<a href="/Eğitim/EğitimEkle/" class="btn btn-info"> Yeni Eğitim Bilgisi</a>

