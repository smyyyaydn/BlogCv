@using CVSİTESİ.Models.Entity
@model List<TblHakkımda>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Hakkımda Düzenleme Sayfası</h2>
<br />
<form method="post">
    @foreach (var item in Model)
    {
        <label>Ad</label>
        <input type="text" name="Ad" value="@item.Ad" class="form-control" />
        <label>Soyad</label>
        <br />
        <input type="text" name="Soyad" value="@item.Soyad" class="form-control" />
        <br />
        <label>Adres</label>
        <input type="text" name="Adres" value="@item.Adres" class="form-control" />
        <br />
        <label>Telefon</label>
        <input type="text" name="Telefon" value="@item.Telefon" class="form-control" />
        <br />
        <label>Mail Adresi</label>
        <input type="text" name="Mail Adresi" value="@item.Mail" class="form-control" />
        <br />
        <label>Resim</label>
        <input type="text" name="Resim" value="@item.Resim" class="form-control" />
        <br />
        <label>Açıklama</label>
<textarea rows="5" class="form-control" name="Açıklama">@item.Açıklama</textarea>

    }
    <br />
    <button class="btn btn-success">Güncelle</button>
</form>