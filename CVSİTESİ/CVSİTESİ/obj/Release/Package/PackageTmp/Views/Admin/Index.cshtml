@using CVSİTESİ.Models.Entity
@model List<TblAdmin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<br />

<h2>Admin İşlemleri</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kullanıcı Adı</th>
        <th>Şifre</th>
        <th>Düzenle</th>
        <th>Kaldır</th>
  
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.KullanıcıAdı</td>
            <td>@item.Şifre</td>
           
            <td><a href="/Admin/AdminDüzenle/@item.ID" class="btn btn-warning">Düzenle</a></td>
            <td><a href="/Admin/AdminSil/@item.ID" class="btn btn-danger">Sil</a></td>

        </tr>
    }
</table>

<a href="/Admin/AdminEkle/" class="btn btn-info"> Yeni Kullanıcı Ekle</a>


